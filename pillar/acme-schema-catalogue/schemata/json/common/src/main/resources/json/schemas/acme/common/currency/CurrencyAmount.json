{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "units",
    "currency"
  ],
  "properties": {
    "units": {
      "type": "integer",
      "minimum": 0
    },
    "currency": {
      "type": "string",
      "enum": [
        "GBP",
        "USD",
        "EUR",
        "JPY"
      ]
    }
  }
}